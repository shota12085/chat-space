.message-list{data: {message: {id: message.id}}}
  .message-list__group
    .message-list__user-name
      = message.user.name
    .message-list__date
      = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
  .message-list__user-message
    - if message.content.present?
      %p.message-list_user-message__content
        = message.content
    = image_tag message.image.url, class: 'message-list__image' if message.image.present?